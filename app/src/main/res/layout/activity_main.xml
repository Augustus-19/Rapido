<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs442.iitc_fall2016_g13.mad_proj.MainActivity">

    <TextView
        android:id="@+id/font_test_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questrial Regular"/>

    <TextView
        android:id="@+id/font_test_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quicksand Bold"
        android:layout_below="@+id/font_test_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/font_test_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quicksand Regular"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/font_test_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/font_test_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quicksand Light"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/font_test_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="QRCode Reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_QRCodeGenerator"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_QRCodeReader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="QRCode Generator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/btn_QRCodeGenerator"
        android:layout_below="@+id/font_test_4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Google Map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_OpenMaps"
        android:layout_below="@+id/btn_QRCodeReader"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:text="Resturant Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ResturantInfo"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btn_OpenMaps"
        android:layout_alignParentStart="true" />

    <Button
        android:text="GOOGLE DIRECTION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_map_direction"
        android:layout_below="@+id/tv_ResturantInfo"
        android:layout_marginTop="30dp" />
</RelativeLayout>
