<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <TextView
        android:text="Please enter Order ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="36dp"
        android:id="@+id/title_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

    <TextView
        android:text="Menu List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order_id_editText"
        android:layout_alignStart="@+id/order_id_editText"
        android:layout_marginTop="27dp"
        android:maxLength="99999999"
        android:id="@+id/menu_list_textview"
        android:textSize="24sp"
        android:layout_above="@+id/get_menu_list_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/order_id_editText"
        android:layout_below="@+id/title_textview"
        android:layout_alignStart="@+id/title_textview" />

    <Button
        android:text="Get Menu List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:id="@+id/get_menu_list_button" />
</RelativeLayout>
