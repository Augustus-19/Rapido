<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:layout_margin="5dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="105dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/restaurant_menu_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/restaurant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <TextView
            android:id="@+id/cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuisine"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:layout_below="@+id/restaurant_title"
            android:layout_alignLeft="@+id/restaurant_title"
            android:layout_alignStart="@+id/restaurant_title" />

        <TextView
            android:id="@+id/busyness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busyness"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/cuisine"
            android:layout_alignLeft="@+id/cuisine"
            android:layout_alignStart="@+id/cuisine" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/restaurant_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp" />

        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(# Reviews)"
            android:textSize="12dp"
            android:layout_below="@+id/rating"
            android:layout_alignRight="@+id/rating"
            android:layout_alignEnd="@+id/rating" />

        <TextView
            android:id="@+id/price_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Range"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/reviews"
            android:layout_alignRight="@+id/reviews"
            android:layout_alignEnd="@+id/reviews"/>

        <TextView
            android:id="@+id/min_spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$# min"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/busyness"
            android:layout_alignLeft="@+id/busyness"
            android:layout_alignStart="@+id/busyness"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# miles"
            android:textSize="12dp"
            android:layout_below="@+id/min_spend"
            android:layout_alignLeft="@+id/min_spend"
            android:layout_alignStart="@+id/min_spend" />

    </RelativeLayout>


</android.support.v7.widget.CardView>